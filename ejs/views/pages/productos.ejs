<main class="container paginas pad-2 tienda">
    <div class="row bs_gutter-x-0 justify-content-center">
        <!-- Pagina: Tienda -->
        <section class="col-md-9">
            <h2 class="pb-4 text-center">Vista de Productos</h2>                
            <div class="productos">
                <div class="table-responsive" id="tableTienda">
                    <% if(productos!=false) { %>
                        <table class="table align-middle">
                            <thead>
                                <tr class="text-center">
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Precio</th>
                                    <th scope="col">Imagen</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% productos.forEach( p => {  %>
                                    <tr id="prod_<%=p.id %>" class="text-center">                                    
                                        <td>
                                            <a href="/producto/<%=p.id %>">
                                                <%=p.title %>
                                            </a>
                                        </td>
                                        <td>$<%=p.price %></td>
                                        <td>
                                            <img src="<%=p.thumbnail %>" class="card-img-top" alt=<%=p.title %>>
                                        </td>                                    
                                    </tr>
                                <% }) %>                                    
                            </tbody>
                        </table>  
                    <% } else { %>
                        <div class="text-center">
                            No se encontraron Productos
                        </div>
                    <% } %>                                      
                </div>
            </div>
        </section>
    </div> 
</main>